require 'formula'

class Ergonomica < Formula
  homepage 'https://github.com/ergonomica/ergonomica'
  url 'https://github.com/ergonomica/ergonomica.git'

  version "1.0.0"

  depends_on "htop"
  depends_on "tmux"
  depends_on "httpie"
  #depends_on "nmap"
  
  def install
    # FIX THIS
    inreplace "lib/lib/version.py", "&&&VERSION&&&", "1.0.0 (7a065b90)"
    
    bin.install "ergonomica.py"
    bin.install "ergonomica"
    bin.install "ergo"
    bin.install "ergo_setup.sh"
    bin.install "lib"

  end
end